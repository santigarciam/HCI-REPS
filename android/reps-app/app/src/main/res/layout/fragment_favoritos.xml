<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_favoritos"
    tools:context=".ui.notifications.DescubrirFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:iconifiedByDefault="false"
            android:layout_height="wrap_content"
            android:queryHint="Busque sus rutinas favoritas"/>
        <!--        TODO: Poner string en el hint-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favourite_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="702dp" />

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>